<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-x;">Create a new post.</h1>
        <hr class="w-1/4 mt-2">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-2 py-3 mt-2" type="file" name="postimage">
            <input class="block w-1/3 px-2 py-3 border-2 rounded-md mt-2 text-black" type="text" placeholder="Title"
                name="title">
            <textarea class="block w-1/3 px-2 py-3 border-2 rounded-md mt-2 text-black h-60" type="text"
                placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-2 py-3 rounded-md mt-2 bg-red-700" type="submit" value="Create Post">
        </form>
    </div>


    <% include ./partials/footer.ejs %>